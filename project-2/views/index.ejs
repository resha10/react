<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Books â€” Card View</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f4f6fb;
      color: #333;
      min-height: 100vh;
    }

    /* ðŸ”¹ Global Header */
    header.main-header {
       background: linear-gradient(135deg, #74ebd5 0%, #9face6 100%);
      padding: 18px 40px;
      position: sticky;
      top: 0;
      z-index: 1000;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 4px 16px rgba(0,0,0,0.15);
    }
    header.main-header .logo {
      font-size: 22px;
      font-weight: 700;
      color: #070707;
      display: flex;
      align-items: center;
      gap: 8px;
      letter-spacing: 0.5px;
    }
    header.main-header nav a {
      text-decoration: none;
      color: #fff;
      margin-left: 24px;
      font-weight: 500;
      font-size: 16px;
      position: relative;
      transition: all 0.3s ease;
    }
    header.main-header nav a::after {
      content: '';
      position: absolute;
      bottom: -6px;
      left: 0;
      width: 0;
      height: 2px;
      background: #fff;
      transition: width 0.3s ease;
    }
    header.main-header nav a:hover::after {
      width: 100%;
    }
    header.main-header .btn-add {
      background: linear-gradient(135deg, #667eea, #9887e3);
      padding: 10px 22px;
      border-radius: 12px;
      font-weight: 600;
      border: none;
      cursor: pointer;
      box-shadow: 0 4px 15px rgba(0,0,0,0.2);
      transition: all 0.3s ease;
    }
    header.main-header .btn-add:hover {
      transform: translateY(-2px);
    }

    /* ðŸ”¹ Page Container */
    .container {
      max-width: 1200px;
      margin: 40px auto;
      padding: 0 20px;
    }
    .header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 24px;
    }
    .header h1 {
      font-size: 2rem;
      color: #1e3a8a;
    }

    /* ðŸ”¹ Cards Grid */
    .cards {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 24px;
    }
    .card {
      background: linear-gradient(135deg, #74ebd5 0%, #9face6 100%);
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 6px 18px rgba(0,0,0,0.08);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      display: flex;
      flex-direction: column;
    }
    .card:hover {
      transform: translateY(-6px);
      box-shadow: 0 12px 28px rgba(0,0,0,0.12);
    }
    .card-media {
      width: 100%;
      height: 220px;
      background: #f0f2f5;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 12px;
    }
    .card-media img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
      border-radius: 8px;
    }
    .card-body {
      padding: 20px;
      display: flex;
      flex-direction: column;
      gap: 14px;
      flex: 1;
    }
    .meta-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .book-title {
      font-weight: 700;
      color: #1e40af;
      font-size: 1.2rem;
    }
    .book-no {
      font-size: 0.85rem;
      color: #6b7280;
      font-weight: 500;
    }
    .tag {
      padding: 5px 12px;
      background: #dbeafe;
      color: #1e40af;
      font-weight: 600;
      border-radius: 12px;
      font-size: 0.75rem;
    }
    .info {
      font-size: 0.9rem;
      color: #374151;
    }
    .info small {
      color: #6b7280;
      font-weight: 600;
      display: block;
      margin-bottom: 4px;
    }

    .card-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 12px;
    }
    .card-footer div {
      font-size: 0.85rem;
      color: #4b5563;
    }
    .card-footer .btn {
      padding: 8px 14px;
      border-radius: 8px;
      font-weight: 600;
      font-size: 0.85rem;
      border: none;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.2s ease;
    }
    .btn-edit {
      background: #3b82f6;
      color: #fff;
    }
    .btn-edit:hover {
      background: #1d4ed8;
      transform: translateY(-1px);
    }
    .btn-delete {
      background: #ef4444;
      color: #fff;
    }
    .btn-delete:hover {
      background: #b91c1c;
      transform: translateY(-1px);
    }

    @media (max-width: 600px) {
      .card-media { height: 180px; }
      .header h1 { font-size: 1.5rem; }
      header.main-header nav { display: none; }
    }
  </style>
</head>
<body>
  <!-- ðŸ”¹ Global Header -->
  <header class="main-header">
    <div class="logo">ðŸ“š Library Manager</div>
    <nav>
      <a href="/">Home</a>
      <a href="/add">Add Book</a>
      <a href="/books">View Books</a>
    </nav>
    <div>
      <a href="/add"><button class="btn btn-add">+ Add Book</button></a>
    </div>
  </header>

  <!-- ðŸ”¹ Page Content -->
  <div class="container">
    <header class="header">
      <h1>Library Books</h1>
    </header>

    <section class="cards">
      <% books.forEach((book) => { %>
        <article class="card">
          <div class="card-media">
            <% if (book.imageUrl) { %>
              <img src="<%= book.imageUrl %>" alt="Cover of <%= book.bookName %>" onerror="this.onerror=null;this.src='https://via.placeholder.com/400x300?text=No+Image'" />
            <% } else { %>
              <img src="https://via.placeholder.com/400x300?text=No+Image" alt="No image available" />
            <% } %>
          </div>
          <div class="card-body">
            <div class="meta-row">
              <div>
                <div class="book-title"><%= book.bookName %></div>
                <div class="book-no">Book No: <span style="color:#2563eb"><%= book.bookNo %></span></div>
              </div>
              <div class="tag"><%= book.language || 'N/A' %></div>
            </div>

            <div class="info">
              <small>Author</small>
              <div><%= book.author || 'Unknown' %></div>
            </div>

            <div class="info">
              <small>Published Date</small>
              <div><%= book.publishedDate ? new Date(book.publishedDate).toLocaleDateString() : 'â€”' %></div>
            </div>

            <div style="flex:1"></div>

            <div class="card-footer">
              <div>Duplicates: <strong><%= book.duplicates || 1 %></strong></div>
              <div style="display:flex;gap:8px">
                <a href="/edit-book/<%= book.bookNo %>"><button class="btn btn-edit">Edit</button></a>
                <a href="/delete-book/<%= book.bookNo %>"><button class="btn btn-delete">Delete</button></a>
              </div>
            </div>
          </div>
        </article>
      <% }) %>
    </section>
  </div>
</body>
</html>
